@model IEnumerable<Material>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-6">
        <div class="col-8">
            <h2 class="text-primary">Material List</h2>
        </div>
        <div class="col-4 text-end">
            <a asp-controller="Material" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Material
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Material Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var material in Model)
            {
                <tr>
                    <td width="45%">
                        @material.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Material" asp-action="Edit" asp-route-id="@material.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                            <a asp-controller="Material" asp-action="Delete" asp-route-id="@material.Id" class="btn btn-danger mx-2"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>