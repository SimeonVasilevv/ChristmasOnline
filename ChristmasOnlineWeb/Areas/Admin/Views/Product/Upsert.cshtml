@model ChristmasOnline.Models.ViewModels.ProductViewModel

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="border p-3 mt-4 row">
        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Id != null ? "Update" : "Create") Product</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea rows="3" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Price"></label>
            <input asp-for=" Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="ListPrice"></label>
            <input asp-for="ListPrice" class="form-control" />
            <span asp-validation-for="ListPrice" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Price10"></label>
            <input asp-for="Price10" class="form-control" />
            <span asp-validation-for="Price10" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Price20"></label>
            <input asp-for="Price20" class="form-control" />
            <span asp-validation-for="Price20" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImageUrl"></label>
            <input type="file" id="uploadBox" name="file" class="form-control" />
        </div>
        <div class="mb-3 col-6">
            <label asp-for="CategoryId"></label>
            <select asp-for="CategoryId" asp-items="@Model.CategoryList" class="form-select">
                <option disabled selected>--Select Category--</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="MaterialId"></label>
            <select asp-for="MaterialId" asp-items="@Model.MaterialList" class="form-select">
                <option disabled selected>--Select Material--</option>
            </select>
            <span asp-validation-for="MaterialId" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
            <label asp-for="Barcode"></label>
            <input asp-for="Barcode" class="form-control" />
            <span asp-validation-for="Barcode" class="text-danger"></span>
        </div>
        <div class="mb-3 col-6">
        <label asp-for="DateOfReceiving"></label>
        <input asp-for="DateOfReceiving" class="form-control" />
        <span asp-validation-for="DateOfReceiving" class="text-danger"></span>
        </div>
        <div class="mt-4 col-6">
            @if (Model.Id != null)
            {
                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            }
            else
            {
                <button type="submit" onclick="return ValidateInput()" class="btn btn-primary" style="width:150px">Create</button>
            }
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
                Back to List
            </a>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        function ValidateInput() {
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Please upload an Image!'
                });
                return false;
            }
            return true;
        }
    </script>
}